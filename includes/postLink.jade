mixin postLink(href, title, img, type, webp)
    div.post-link
        a(href=href).w3-row-padding
            div.col.l3.m6.margin-bottom
                div.w3-display-container
                    div.w3-display-bottomleft.w3-black.br-2.padding=title
                    picture
                        source(srcset=webp type="image/webp")
                        source(srcset=img type="image/"+type) 
                        img(src=img alt=title).app_image.margin-bottom
