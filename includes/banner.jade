mixin banner(src, col, class_name='', type, webp)
    header(style="background-color:"+col).header
        picture
            source(srcset=webp type="image/webp")
            source(srcset=img type="image/"+type) 
            img(id="bannerImg" class="w3-image "+class_name, alt="Post banner image" src=img).app_image.w3-margin-bottom
